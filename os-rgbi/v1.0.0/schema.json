{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/SpatialDays/sd-stac-extensions/main/os-rgbi/v1.0.0/schema.json",
    "title": "Ordnance Survey RGB Extension",
    "description": "Ordnance Survey RGB Extension to STAC Items and Collections",
    "allOf": [
        {
            "type": "object",
            "required": [
                "type",
                "properties",
                "assets"
            ],
            "properties": {
                "type": {
                    "const": "Feature"
                },
                "collection": {
                    "type": "string"
                },
                "properties": {
                    "allOf": [
                        {
                            "required": [
                                "os-rgbi:metadata_date",
                                "os-rgbi:update_trigger",
                                "os-rgbi:acquired_by",
                                "os-rgbi:flying_block",
                                "os-rgbi:imagery_type",
                                "os-rgbi:tile_number",
                                "os-rgbi:tile_count",
                                "os-rgbi:lens_focal_length",
                                "os-rgbi:nominal_flying_height",
                                "os-rgbi:imagery_control_method"
                            ]
                        },
                        {
                            "$ref": "#/definitions/fields"
                        }
                    ]
                }
            }
        },
        {
            "$ref": "#/definitions/stac_extensions"
        }
    ],
    "definitions": {
        "stac_extensions": {
            "type": "object",
            "required": [
                "stac_extensions"
            ],
            "properties": {
                "stac_extensions": {
                    "type": "array",
                    "contains": {
                        "const": "https://raw.githubusercontent.com/SpatialDays/sd-stac-extensions/main/os-rgbi/v1.0.0/schema.json"
                    }
                }
            }
        },
        "fields": {
            "os-rgbi:metadata_date": {
                "title": "Metadata Date",
                "type": "string",
                "format": "date-time"
            },
            "os-rgbi:update_trigger": {
                "title": "Update Trigger",
                "type": "string"
            },
            "os-rgbi:acquired_by": {
                "title": "Acquired By",
                "type": "string"
            },
            "os-rgbi:flying_block": {
                "title": "Flying Block",
                "type": "string"
            },
            "os-rgbi:imagery_type": {
                "title": "Imagery Type",
                "type": "string"
            },
            "os-rgbi:tile_number": {
                "title": "Tile Number",
                "type": "integer"
            },
            "os-rgbi:tile_count": {
                "title": "Tile Count",
                "type": "integer"
            },
            "os-rgbi:lens_focal_length": {
                "title": "Lens Focal Length",
                "type": "number"
            },
            "os-rgbi:nominal_flying_height": {
                "title": "Nominal Flying Height",
                "type": "number"
            },
            "os-rgbi:imagery_control_method": {
                "title": "Imagery Control Method",
                "type": "string"
            }
        }
    }
}
