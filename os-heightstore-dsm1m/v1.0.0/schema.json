{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/SpatialDays/sd-stac-extensions/main/os-heightstore-dsm1m/v1.0.0/schema.json",
    "title": "Ordnance Survey RGB Extension",
    "description": "Ordnance Survey os-heightstore-dsm1m Extension to STAC Items and Collections",
    "allOf": [
        {
            "type": "object",
            "required": [
                "type",
                "properties",
                "assets"
            ],
            "properties": {
                "type": {
                    "const": "Feature"
                },
                "collection": {
                    "type": "string"
                },
                "properties": {
                    "allOf": [
                        {
                            "required": [
                                "os-heightstore-dsm1m:flight-date",
                                "os-heightstore-dsm1m:submitted-date",
                                "os-heightstore-dsm1m:original_metadata_location",
                                "os-heightstore-dsm1m:version"

                            ]
                        },
                        {
                            "$ref": "#/definitions/fields"
                        }
                    ]
                }
            }
        },
        {
            "$ref": "#/definitions/stac_extensions"
        }
    ],
    "definitions": {
        "stac_extensions": {
            "type": "object",
            "required": [
                "stac_extensions"
            ],
            "properties": {
                "stac_extensions": {
                    "type": "array",
                    "contains": {
                        "const": "https://raw.githubusercontent.com/SpatialDays/sd-stac-extensions/main/os-heightstore-dsm1m/v1.0.0/schema.json"
                    }
                }
            }
        },
        "fields": {
            "os-heightstore-dsm1m:flight-date": {
                "title": "Metadata Date",
                "type": "string",
                "format": "date-time"
            },
            "os-heightstore-dsm1m:submitted-date": {
                "title": "Metadata Date",
                "type": "string",
                "format": "date-time"
            },
            "os-heightstore-dsm1m:original_metadata_location": {
                "title" : "Original metadata location",
                "type" : "string"
            },
            "os-heightstore-dsm1m:version": {
                "title" : "Original metadata location",
                "type" : "string"
            }

        }
    }
}
